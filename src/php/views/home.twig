{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
	<link rel="stylesheet" type="text/css" href="css/home.css">
{% endblock %}

{% block body %}
	<p>session : {{user}}</p>
	<div class="row">
	    <div class="small-12 small-order-2 large-order-2 large-6 columns">
	        <h2>Liste des salons de jeu</h2>
	        <ul id="gameList">
                {% for game in games %}
					<li class="game-info">
						<div>
							<label>{{ game.label }} ( {{ game.players|length }} / 6 )</label>  <a href='{{ game.id }}'>Rejoindre</a>
						</div>
						<div>
                            {% for player in game.players %}
								{{ player.email }}{% if not loop.last %} - {% endif %}
							{% endfor %}
						</div>
					</li>
				{% endfor %}
			</ul>
	    </div>
	    <div class="small-12 small-order-1 large-order-2 large-5 columns">
	        <label>Nom du salon :
	            <input type="text" id="createRoomName" name="roomName">
	        </label>
	        <button id="createRoom" class="button primary">Cr√©er un nouveau salon</button>
	    </div>
	</div>
	<script src="js/jquery-3.1.1.min.js"></script>
	<script src="js/foundation.js"></script>
	<script src="js/home.js"></script>	
{% endblock %}